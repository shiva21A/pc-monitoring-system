# ---------- RECEIVE PC DATA ----------
@app.route("/api/update", methods=["POST"])
def update_pc():
    data = request.json

    conn = sqlite3.connect("database.db")
    cur = conn.cursor()

    cur.execute("""
    INSERT INTO pc_stats (api_key, cpu, ram, battery, ip, brand, last_seen)
    VALUES (?, ?, ?, ?, ?, ?, ?)
    """, (
        data["api_key"],
        data["cpu"],
        data["ram"],
        data["battery"],
        data["ip"],
        data["brand"],
        datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    ))

    conn.commit()
    conn.close()

    return jsonify({"status": "ok"})

